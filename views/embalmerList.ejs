        <table>
            <tr>
                <th>Name</th>
                <th>Address</th>
                <th>Designation</th>
                <th>License No.</th>
                <th>Issued on<br><sub>(YYYY/MM/DD)</sub></th>
                <th>Issued at</th>
                <th>Expiray Date<br><sub>(YYYY/MM/DD)</sub></th>
                <th>Edit</th>
            </tr>

            <% for(let data of datas) {%>
                <tr>
                    <td>
                        <%=data.embalmerGivenName%>
                            <%=data.embalmerMiddleName%>
                                <%=data.embalmerSurName%>
                    </td>
                    <td>
                        <%=data.embalmerAddress1%>
                            <%=data.embalmerAddress2%>
                    </td>
                    <td>
